{
  "name": "YouTube Pause",
  "version": "1.3.0",
  "description": "Pause a video on YouTube.",
  "background": {
    "persistent": false,
    "scripts": ["public/background.js"]
  },
  "browser_action": {
    "default_icon": "icon-pause-128.png",
    "default_title": "Pause YouTube video",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/**"],
      "js": ["public/contentscript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.youtube.com/**"
  ],
  "manifest_version": 2,
  "commands": {
    "playPause": {
      "global": true,
      "description": "Pause YouTube video"
    },
    "playNext": {
      "global": true,
      "description": "Next YouTube video"
    },
    "playPrev": {
      "global": true,
      "description": "Prev YouTube video"
    }
  }
}
